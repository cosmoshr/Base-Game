{
  "extends": "stylelint-config-standard",
  "rules": {
    "declaration-empty-line-before": [
      "never"
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "/regex/",
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "return"
        ]
      }
    ]
  }
}
