{
  "name": "base_game",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/cosmoshr/Base-Game",
  "license": "GPL-3.0-or-later",
  "description": "The base game repository",
  "main": "dist/electron-renderer/electron.js",
  "scripts": {
    "eslint": "eslint src --fix",
    "stylelint": "stylelint src/sass/**/*.scss",
    "lint": "yarn eslint && yarn stylelint",
    "build": "webpack -p --progress --config config/webpack.prod.js",
    "build:electron": "cross-env WEBPACK_ENV=electron-renderer yarn build && electron-builder",
    "serve": "webpack-dev-server -d --progress --color --config config/webpack.dev.js --host 0.0.0.0",
    "serve:electron": "concurrently \"cross-env WEBPACK_ENV=electron-renderer yarn serve\" \"wait-on http://localhost:8080 && cross-env ELECTRON_ENV=serve electron electron.js\"",
    "test": "echo No test"
  },
  "build": {
    "productName": "Cosmos Habititation Race",
    "files": [
      "dist/electron-renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "src"
    },
    "publish": null,
    "icon": "public/favicon.png"
  },
  "dependencies": {
    "dexie": "^2.0.4",
    "pixi-viewport": "^3.23.2",
    "pixi.js": "^5.0.4",
    "subworkers": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^v7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-private-methods": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^9.6.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "breakpoint-sass": "^2.7.1",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "electron": "5.0.3",
    "electron-builder": "^20.43.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "file-loader": "^4.0.0",
    "ghooks": "^2.0.4",
    "global": "^4.3.2",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "prettier-eslint": "^8.8.2",
    "raw-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "terser-webpack-plugin": "^1.3.0",
    "url-loader": "^2.0.0",
    "wait-on": "^3.2.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-dev-server": "^3.7.1",
    "webpack-merge": "^4.2.1",
    "worker-loader": "^2.0.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn lint",
      "post-merge": "yarn install"
    }
  }
}
