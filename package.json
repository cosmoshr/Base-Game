{
  "name": "base_game",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/cosmoshr/Base-Game",
  "license": "GPL-3.0-or-later",
  "description": "The base game repository",
  "main": "dist/electron-renderer/electron.js",
  "scripts": {
    "eslint": "eslint src --fix",
    "stylelint": "stylelint src/sass/**/*.scss",
    "lint": "yarn eslint && yarn stylelint",
    "build": "webpack -p --progress --config config/webpack.prod.js",
    "build:electron": "cross-env WEBPACK_ENV=electron-renderer yarn build && electron-builder",
    "serve": "webpack-dev-server -d --progress --color --config config/webpack.dev.js --host 0.0.0.0",
    "serve:electron": "concurrently \"cross-env WEBPACK_ENV=electron-renderer yarn serve\" \"wait-on http://localhost:8080 && cross-env ELECTRON_ENV=serve electron electron.js\""
  },
  "build": {
    "productName": "Cosmos Habititation Race",
    "files": [
      "dist/electron-renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "src"
    },
    "publish": null,
    "icon": "public/electron.ico"
  },
  "dependencies": {
    "breakpoint-sass": "^2.7.1",
    "global": "^4.3.2",
    "pixi.js": "^5.0.2",
    "subworkers": "^1.0.1",
    "worker-loader": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.0.0-beta.49",
    "autoprefixer": "^8.6.2",
    "babel-eslint": "^8.2.3",
    "babel-loader": "8.0.0-beta.0",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "electron": "5.0.2",
    "electron-builder": "^20.15.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.12.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "ghooks": "^2.0.4",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.5",
    "prettier-eslint": "^8.8.1",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "wait-on": "^3.2.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn lint",
      "post-merge": "yarn install"
    }
  }
}
